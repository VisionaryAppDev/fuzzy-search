{
    "name": "fuzzy-search",
    "displayName": "Fuzzy Search",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.2.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.fuzzy-search"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [{
            "command": "extension.fuzzy-search",
            "title": "Fuzzy Search"
        }],
        "colors": [{
            "id": "highlight.color",
            "description": "Background highlight color",
            "defaults": {
                "dark": "#FF000055",
                "light": "#FF000055",
                "highContrast": "#FF000055"
            }
        }],
        "configuration": {
            "title": "Fuzzy Search",
            "type": "object",
            "properties": {
                "fuzzy-search.border-dark-theme-color": {
                    "type": "string",
                    "default": "lightblue"
                },
                "fuzzy-search.border-ruler-color": {
                    "type": "string",
                    "default": "blue"
                },
                "fuzzy-search.border-light-theme-color": {
                    "type": "string",
                    "default": "darkblue"
                },
                "fuzzy-search.relocation": {
                    "type": "string",
                    "enum": [
                        "top",
                        "center",
                        "bottom"
                    ],
                    "default": "center"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "*",
        "vscode": "*",
        "tslint": "*",
        "@types/node": "*",
        "@types/mocha": "*",
        "fuzzy": "*"
    }
}